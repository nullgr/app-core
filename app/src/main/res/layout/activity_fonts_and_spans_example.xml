<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textWithFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/fonts_example_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textWithColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/fonts_example_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textWithRelativeSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/fonts_example_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textWithComplicatedSpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/fonts_example_text_2"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>