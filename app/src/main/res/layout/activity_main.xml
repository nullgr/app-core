<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.nullgr.androidcore.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonLocationExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_location_example" />

        <Button
            android:id="@+id/buttonCommonIntentsExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_intents_example" />

        <Button
            android:id="@+id/buttonDateUtilsExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_date_utils_example" />

        <Button
            android:id="@+id/buttonFontsAndSpans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_fonts_and_spans_activity" />

        <Button
            android:id="@+id/buttonResourcesExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_res_example" />

    </LinearLayout>

</ScrollView>
